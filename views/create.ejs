<div class=site-wrapper ng-controller="createCtrl as create">
  <div class="peekpeak-navbar">
    <a href="/"><div class="pp-nav-btn peekpeak-logo"></div></a>
    <a href="/"><div class="pp-nav-btn home"></div></a>
    <a href="/"><div class="pp-nav-btn back"></div></a>
    <a href="/playnow"><div class="pp-nav-btn playnow"></div></a>
    <a href="/story"><div class="pp-nav-btn story"></div></a>
    <a href="/dictionary"><div class="pp-nav-btn dictionary"></div></a>
    <a href="/teacher"><div class="pp-nav-btn teacher"></div></a>
  </div>


  <div class="page-content create-page">


    <div class="instructions">
      <h3>This is a private page used by the developers to create the data found within Peek Peak.</h3>
    </div>

    <div class="unit">
      <div class="third">
        <h3>Unit:</h3>
      </div>

      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter unit name" ng-model="unitformData.unitname">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter unit number" ng-model="unitformData.unitnum">
        <br>
        <button type="submit" class="btn btn-primary btn-sm" ng-click="addUnit()">Add Unit</button>
      </div>

      <div class="third">
        <p>Current Unit ID:</p>
        <p> {{ currentUnit.id }} </p>
        <p>Copy this for creating words and questions for this unit: {{currentUnit.unit_name}}</p>
      </div>
    </div>


    <div class="word">
      <div class="third">
        <h3>Word:</h3>
      </div>

      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter word here" ng-model="wordformData.word">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter unit ID here from above" ng-model="wordformData.unit">
        <br>
        <button type="submit" class="btn btn-primary btn-sm" ng-click="addWord()">Add Word</button>
      </div>

      <div class="third">
        <p>Current Word ID:</p>
        <p> {{ currentWord.id }} </p>
        <p>Copy this for creating definitions for the word: {{currentWord.word}}</p>
      </div>
    </div>

    <div class="definition">
      <div class="third">
        <h3>Definition:</h3>
      </div>
      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter definition here" ng-model="defformData.def">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter image file path here (ie '/images/bill-bird.png')" ng-model="defformData.image">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter word ID from above here" ng-model="defformData.word">
        <button type="submit" class="btn btn-primary btn-sm" ng-click="addDef()">Add Definition</button>
      </div>

      <div class="third">
        <p>Current Definition ID:</p>
        <p>{{currentDef.id}}</p>
        <p>Copy this for creating synonyms for the definition: {{currentDef.definition}}</p>
      </div>

    </div>

    <div class="synonym">
      <div class="third">
        <h3>Synonym:</h3>
      </div>
      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter synonym here" ng-model="synformData.word">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter definition ID from above here" ng-model="synformData.def">
        <button type="submit" class="btn btn-primary btn-sm" ng-click="addSyn()">Add Synonym</button>
      </div>

      <div class="third"></div>
    </div>

    <div class="question">
      <div class="third">
        <h3>MC Question:</h3>
      </div>
      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter unit ID from above here" ng-model="mcformData.unit">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter word that this question quizzes" ng-model="mcformData.word">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter MC" ng-model="mcformData.questiontype">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter difficulty [1,2,3,4,5]" ng-model="mcformData.difficulty">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter question" ng-model="mcformData.question">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer A" ng-model="mcformData.a1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer B" ng-model="mcformData.b1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer C" ng-model="mcformData.c1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer D (if necessary)" ng-model="mcformData.d1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer E (if necessary)" ng-model="mcformData.e1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer (A, B, C, D, E)" ng-model="mcformData.answer_a">

        <button type="submit" class="btn btn-primary btn-sm" ng-click="addMC()">Add MC Question</button>
      </div>

      <div class="third"></div>
    </div>

    <div class="question">
      <div class="third">
        <h3>FITB Question:</h3>
      </div>
      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter unit ID from above here" ng-model="fitbformData.unit">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter word that this question quizzes" ng-model="fitbformData.word">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter FITB" ng-model="fitbformData.questiontype">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter difficulty [1,2,3,4,5]" ng-model="fitbformData.difficulty">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter question" ng-model="fitbformData.question">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer A (use if MC/FITB, otherwise leave ABCDE blank)" ng-model="fitbformData.a1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer B" ng-model="fitbformData.b1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer C" ng-model="fitbformData.c1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer D (if necessary)" ng-model="fitbformData.d1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer E (if necessary)" ng-model="fitbformData.e1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer (if MC: A, B, C, D, E; else: correct string)" ng-model="fitbformData.answer_a">

        <button type="submit" class="btn btn-primary btn-sm" ng-click="addFITB()">Add FITB Question</button>
      </div>

      <div class="third"></div>
    </div>

    <div class="matching">
      <div class="third">
        <h3>Matching Question:</h3>
      </div>
      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter unit ID from above here" ng-model="matchformData.unit">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter word that this question quizzes" ng-model="matchformData.word">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter M" ng-model="matchformData.questiontype">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter difficulty [1,2,3,4,5]" ng-model="matchformData.difficulty">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter question" ng-model="matchformData.question">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 1" ng-model="matchformData.a1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 2" ng-model="matchformData.b1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 3" ng-model="matchformData.c1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 4" ng-model="matchformData.d1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 5" ng-model="matchformData.e1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 6" ng-model="matchformData.f1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 7" ng-model="matchformData.g1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer a" ng-model="matchformData.a2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer b" ng-model="matchformData.b2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer c" ng-model="matchformData.c2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer d" ng-model="matchformData.d2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer e" ng-model="matchformData.e2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer f" ng-model="matchformData.f2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer g" ng-model="matchformData.g2">

        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 1 (A,B,C,D,E,F,G)" ng-model="matchformData.answer_a">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 2 (A,B,C,D,E,F,G)" ng-model="matchformData.answer_b">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 3 (A,B,C,D,E,F,G)" ng-model="matchformData.answer_c">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 4 (A,B,C,D,E,F,G)" ng-model="matchformData.answer_d">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 5 (A,B,C,D,E,F,G)" ng-model="matchformData.answer_e">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 6 (A,B,C,D,E,F,G)" ng-model="matchformData.answer_f">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 7 (A,B,C,D,E,F,G)" ng-model="matchformData.answer_g">


        <button type="submit" class="btn btn-primary btn-sm" ng-click="addMatch()">Add Matching Question</button>
      </div>

      <div class="third"></div>
    </div>


    <div class="matching">
      <div class="third">
        <h3>Pic-Matching Question:</h3>
      </div>
      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter unit ID from above here" ng-model="pmformData.unit">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter word that this question quizzes" ng-model="pmformData.word">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter PM" ng-model="pmformData.questiontype">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter difficulty [1,2,3,4,5]" ng-model="pmformData.difficulty">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter question" ng-model="pmformData.question">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 1 (picture location, (ie, /images/bill-money.png)" ng-model="pmformData.a1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 2 (picture location, (ie, /images/bill-money.png)" ng-model="pmformData.b1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 3 (picture location, (ie, /images/bill-money.png)" ng-model="pmformData.c1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 4 (picture location, (ie, /images/bill-money.png)" ng-model="pmformData.d1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 5 (picture location, (ie, /images/bill-money.png)" ng-model="pmformData.e1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 6 (picture location, (ie, /images/bill-money.png)" ng-model="pmformData.f1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer 7 (picture location, (ie, /images/bill-money.png)" ng-model="pmformData.g1">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer a" ng-model="pmformData.a2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer b" ng-model="pmformData.b2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer c" ng-model="pmformData.c2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer d" ng-model="pmformData.d2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer e" ng-model="pmformData.e2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer f" ng-model="pmformData.f2">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter answer g" ng-model="pmformData.g2">

        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 1 (A,B,C,D,E,F,G)" ng-model="pmformData.answer_a">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 2 (A,B,C,D,E,F,G)" ng-model="pmformData.answer_b">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 3 (A,B,C,D,E,F,G)" ng-model="pmformData.answer_c">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 4 (A,B,C,D,E,F,G)" ng-model="pmformData.answer_d">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 5 (A,B,C,D,E,F,G)" ng-model="pmformData.answer_e">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 6 (A,B,C,D,E,F,G)" ng-model="pmformData.answer_f">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter correct answer for 7 (A,B,C,D,E,F,G)" ng-model="pmformData.answer_g">


        <button type="submit" class="btn btn-primary btn-sm" ng-click="addPM()">Add Pic-Matching Question</button>
      </div>

      <div class="third"></div>
    </div>

    <div class="school">
      <div class="third">
        <h3>School:</h3>
      </div>

      <div class="third">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter school name" ng-model="schoolformData.school">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter city name" ng-model="schoolformData.city">
        <input type="text" class="form-control input-sm text-center" placeholder="Enter state name" ng-model="schoolformData.state">
        <button type="submit" class="btn btn-primary btn-sm" ng-click="addSchool()">Add School</button>
      </div>

      <div class="third"></>
    </div>

    <div class="mastfoot">
      <div class="inner">
        <div ng-click="userLogout()" class="logo"></div>
      </div>
    </div>

  </div>

</div>
