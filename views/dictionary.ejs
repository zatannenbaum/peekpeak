
<div class="site-wrapper" ng-controller="dictionaryCtrl as dictionary">

  <nav class="navbar masthead">
    <a href="/" class="navbar-brand btn btn-lg btn-pp"></a>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/playnow" class="btn btn-default navbar-btn btn-play"></a></li>
        <li class="active"><a href="/dictionary" class="btn btn-default navbar-btn btn-dict"></a></li>
        <li><a href="/story" class="btn btn-default navbar-btn btn-story"></a></li>
        <li><a href="/teacher" class="btn btn-default navbar-btn btn-teacher"></a></li>
      </ul>
  </nav>

  <div class="page-content">

    <div class="section">
      <nav class="words">
        <ul class="list-group word-list">
          <button type="button" class="list-group-item word" ng-repeat="singleWord in words | orderBy:'word'" ng-click="selectWord(singleWord)">
              {{ singleWord.word }}
          </button>
        </ul>
      </nav>
    </div>

    <div class="current">

      <div class="currentword-header"><h2> {{ currentWord.word }} </h2></div>

      <div class="info">

        <div class="previous">
          <div class="prev-next"></div>
          <div class="prev-next-btn">
            <button type="button" class="btn btn-lg btn-default" aria-label="Chevron Left" ng-click="updateprev()">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            </button>
          </div>
          <div class="prev-next"></div>
        </div>

        <div class="info-image" ng-show="image" ng-click="showdef()">
          <img ng-src="{{ currentDefs[idef].image }}">
        </div>

        <div class="info-def" ng-hide="image" ng-click="showimg()">
          <p class="definition">definition: {{ currentDefs[idef].definition }}</p>
          <p class="synonym">synonyms: </p>
          <p ng-repeat="singleSyn in syns" ng-if="singleSyn.definition==singleDef.id">{{ singleSyn.word }}</p>
        </div>

        <div class="next">
          <div class="prev-next"></div>
          <div class="prev-next-btn">
            <button type="button" class="btn btn-lg btn-default" aria-label="Chevron Right" ng-click="updatenext()">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            </button>
          </div>
          <div class="prev-next"></div>
        </div>

      </div>
    </div>
  </div>


  <div class="mastfoot">
    <div class="inner">
      <div class="logo"></div>
    </div>
  </div>

</div>
