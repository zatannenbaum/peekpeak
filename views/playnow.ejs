
<div class="site-wrapper" ng-controller="playnowCtrl as playnow">



  <div class="peekpeak-navbar">
    <a href="/"><div class="pp-nav-btn peekpeak-logo"></div></a>
    <a href="/"><div class="pp-nav-btn home"></div></a>
    <a href="/"><div class="pp-nav-btn back"></div></a>
    <a href="/playnow"><div class="pp-nav-btn playnow active-page"></div></a>
    <a href="/story"><div class="pp-nav-btn story"></div></a>
    <a href="/dictionary"><div class="pp-nav-btn dictionary"></div></a>
    <a href="/teacher"><div class="pp-nav-btn teacher"></div></a>
  </div>


  <div class="page-content">
    <div class="unit-select">
      <span>Select unit to practice:</span>
      <select ng-model="currentUnit" ng-options="u.unit_name for u in units" ng-change="selectUnit()"></select>
    </div>
    <div class="question" ng-hide="done">
      <div class="innerQ MC" ng-show="currentQ.questiontype === 'MC'">
        <span>{{ currentQ.question }}</span>
        <form>
          <label>
            <input type="radio" name="MCAnswer" ng-model="answer.response" value="A">
            {{ currentQ.a1 }}
          </label><br/>
          <label>
            <input type="radio" name="MCAnswer" ng-model="answer.response" value="B">
            {{ currentQ.b1 }}
          </label><br/>
          <label>
            <input type="radio" name="MCAnswer" ng-model="answer.response" value="C">
            {{ currentQ.c1 }}
          </label><br/>
          <label ng-show="currentQ.d1">
            <input type="radio" name="MCAnswer" ng-model="answer.response" value="D">
            {{ currentQ.d1 }}
          </label><br/>
          <label ng-show="currentQ.e1">
            <input type="radio" name="MCAnswer" ng-model="answer.response" value="E">
            {{ currentQ.e1 }}
          </label><br/>
          <input class="contrast" type="submit" name="submit" ng-click="checkMCFITB()">
        </form>
      </div>

      <div class="innerQ FITB" ng-show="currentQ.questiontype === 'FITB'">
        <span>{{ currentQ.question }}</span>
        <form>
          <label ng-hide="currentQ.a1">
            Answer:
            <input class="contrast" type="text" name="FITBinput" ng-model="answer.response" autocomplete="off">
          </label></br>
          <label ng-show="currentQ.a1">
            <input type="radio" name="FITBAnswer" ng-model="answer.response" value="A">
            {{ currentQ.a1 }}
          </label><br/>
          <label ng-show="currentQ.b1">
            <input type="radio" name="FITBAnswer" ng-model="answer.response" value="B">
            {{ currentQ.b1 }}
          </label><br/>
          <label ng-show="currentQ.c1">
            <input type="radio" name="FITBAnswer" ng-model="answer.response" value="C">
            {{ currentQ.c1 }}
          </label><br/>
          <label ng-show="currentQ.d1">
            <input type="radio" name="FITBAnswer" ng-model="answer.response" value="D">
            {{ currentQ.d1 }}
          </label><br/>
          <label ng-show="currentQ.e1">
            <input type="radio" name="FITBAnswer" ng-model="answer.response" value="E">
            {{ currentQ.e1 }}
          </label><br/>
          <input class="contrast" type="submit" name="submit" ng-click="checkMCFITB()">
        </form>
      </div>

      <div class="innerQ M" ng-show="currentQ.questiontype === 'M'">
        <div class="MatchQ">
          <span>{{ currentQ.question }}</span>
        </div>
        <div class="matchLeft">
          <label>
            <select ng-model="matchanswer.a">
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D" ng-show="currentQ.answer_d">D</option>
              <option value="E" ng-show="currentQ.answer_e">E</option>
              <option value="F" ng-show="currentQ.answer_f">F</option>
              <option value="G" ng-show="currentQ.answer_g">G</option>
            </select>
            1. {{ currentQ.a1 }}
          </label><br/>
          <label>
            <select ng-model="matchanswer.b">
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D" ng-show="currentQ.answer_d">D</option>
              <option value="E" ng-show="currentQ.answer_e">E</option>
              <option value="F" ng-show="currentQ.answer_f">F</option>
              <option value="G" ng-show="currentQ.answer_g">G</option>
            </select>
            2. {{ currentQ.b1 }}
          </label><br/>
