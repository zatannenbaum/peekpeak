                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="C">C</option>
                  <option value="D" ng-show="currentQ.answer_d">D</option>
                  <option value="E" ng-show="currentQ.answer_e">E</option>
                  <option value="F" ng-show="currentQ.answer_f">F</option>
                  <option value="G" ng-show="currentQ.answer_g">G</option>
                </select>
                7. {{ currentQ.g2 }}
              </label><br/>
            </div>
            <div class="matchRight">
              <label align="left">
                A.
                <img style="width: 40%; height: auto;" ng-src="{{ currentQ.a1 }}">
              </label></br>
              <label align="left">
                B.
                <img style="width: 40%; height: auto;" ng-src="{{ currentQ.b1 }}">
              </label></br>
              <label align="left" ng-show="currentQ.answer_c">
                C.
                <img style="width: 40%; height: auto;" ng-src="{{ currentQ.c1 }}">
              </label></br>
              <label align="left" ng-show="currentQ.answer_d">
                D.
                <img style="width: 40%; height: auto;" ng-src="{{ currentQ.d1 }}">
              </label></br>
