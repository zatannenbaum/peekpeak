                  <option value="C">C</option>
                  <option value="D" ng-show="currentQ.answer_d">D</option>
                  <option value="E" ng-show="currentQ.answer_e">E</option>
                  <option value="F" ng-show="currentQ.answer_f">F</option>
                  <option value="G" ng-show="currentQ.answer_g">G</option>
                </select>
                3. {{ currentQ.c1 }}
              </label><br/>
              <label ng-show="currentQ.answer_d">
                <select ng-model="matchanswer.d">
                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="C">C</option>
                  <option value="D" ng-show="currentQ.answer_d">D</option>
                  <option value="E" ng-show="currentQ.answer_e">E</option>
                  <option value="F" ng-show="currentQ.answer_f">F</option>
                  <option value="G" ng-show="currentQ.answer_g">G</option>
                </select>
                4. {{ currentQ.d1 }}
              </label><br/>
              <label ng-show="currentQ.answer_e">
                <select ng-model="matchanswer.e">
                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="C">C</option>
                  <option value="D" ng-show="currentQ.answer_d">D</option>
                  <option value="E" ng-show="currentQ.answer_e">E</option>
                  <option value="F" ng-show="currentQ.answer_f">F</option>
                  <option value="G" ng-show="currentQ.answer_g">G</option>
                </select>
                5. {{ currentQ.e1 }}
              </label><br/>
              <label ng-show="currentQ.answer_f">
                <select ng-model="matchanswer.f">
                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="C">C</option>
                  <option value="D" ng-show="currentQ.answer_d">D</option>
                  <option value="E" ng-show="currentQ.answer_e">E</option>
                  <option value="F" ng-show="currentQ.answer_f">F</option>
                  <option value="G" ng-show="currentQ.answer_g">G</option>
                </select>
                6. {{ currentQ.f1 }}
              </label><br/>
              <label ng-show="currentQ.answer_g">
                <select ng-model="matchanswer.g">
                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="C">C</option>
                  <option value="D" ng-show="currentQ.answer_d">D</option>
                  <option value="E" ng-show="currentQ.answer_e">E</option>
                  <option value="F" ng-show="currentQ.answer_f">F</option>
                  <option value="G" ng-show="currentQ.answer_g">G</option>
                </select>
                7. {{ currentQ.g1 }}
              </label><br/>
            </div>
            <div class="matchRight">
              <label>
                A. {{ currentQ.a2 }}
              </label></br>
              <label>
                B. {{ currentQ.b2 }}
              </label></br>
              <label ng-show="currentQ.answer_c">
                C. {{ currentQ.c2 }}
              </label></br>
              <label ng-show="currentQ.answer_d">
                D. {{ currentQ.d2 }}
              </label></br>
              <label ng-show="currentQ.answer_e">
