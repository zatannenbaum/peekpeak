            </select>
            5. {{ currentQ.e2 }}
          </label><br/>
          <label ng-show="currentQ.answer_f">
            <select ng-model="matchanswer.f">
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D" ng-show="currentQ.answer_d">D</option>
              <option value="E" ng-show="currentQ.answer_e">E</option>
              <option value="F" ng-show="currentQ.answer_f">F</option>
              <option value="G" ng-show="currentQ.answer_g">G</option>
            </select>
            6. {{ currentQ.f2 }}
          </label><br/>
          <label ng-show="currentQ.answer_g">
            <select ng-model="matchanswer.g">
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D" ng-show="currentQ.answer_d">D</option>
              <option value="E" ng-show="currentQ.answer_e">E</option>
              <option value="F" ng-show="currentQ.answer_f">F</option>
              <option value="G" ng-show="currentQ.answer_g">G</option>
            </select>
            7. {{ currentQ.g2 }}
          </label><br/>
          <input class="contrast" type="submit" name="submit" ng-click="checkMatch()">
        </div>
        <div class="matchRight">
          <label>
            A.
            <img ng-src="{{ currentQ.a1 }}">
          </label></br>
          <label>
            B.
            <img ng-src="{{ currentQ.b1 }}">
          </label></br>
          <label ng-show="currentQ.answer_c">
            C.
            <img ng-src="{{ currentQ.c1 }}">
          </label></br>
          <label ng-show="currentQ.answer_d">
            D.
            <img ng-src="{{ currentQ.d1 }}">
          </label></br>
          <label ng-show="currentQ.answer_e">
            E.
            <img ng-src="{{ currentQ.e1 }}">
          </label></br>
          <label ng-show="currentQ.answer_f">
            F.
            <img ng-src="{{ currentQ.f1 }}">
          </label></br>
          <label ng-show="currentQ.answer_g">
            G.
            <img ng-src="{{ currentQ.g1 }}">
          </label></br>
        </div>

      </div>


      <div class="answer" ng-show="answered">
        <span ng-show="correct">Correct Answer</span>
        <span ng-hide="correct">Incorrect Answer</span>
        <button class="btn btn-primary btn-sm" ng-click="next()">Next</button>
      </div>
    </div>

    <div class="question" ng-show="done">
      <h2>No more questions!</h2>
    </div>






    <div class="mastfoot">
      <div class="inner">
        <div class="logo"></div>
      </div>
